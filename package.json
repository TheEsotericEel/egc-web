{
    "name":  "egc-web",
    "version":  "0.1.0",
    "private":  true,
    "description":  "Monorepo for eBay Gross Calculator web app and calc-core package",
    "license":  "MIT",
    "type":  "module",
    "workspaces":  [
                       "apps/*",
                       "packages/*"
                   ],
    "scripts":  {
                    "dev":  "npm run dev -w apps/web",
                    "build":  "npm run build -ws",
                    "test":  "npm run test -ws",
                    "typecheck":  "npm run typecheck -ws --if-present",
                    "lint":  "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
                    "format":  "prettier --write .",
                    "clean":  "git clean -fdX -e !node_modules/"
                },
    "engines":  {
                    "node":  "\u003e=20.0.0",
                    "npm":  "\u003e=10.0.0"
                },
    "devDependencies":  {
                            "@types/node":  "^22.18.0",
                            "eslint":  "^9.34.0",
                            "prettier":  "^3.6.2",
                            "ts-node":  "^10.9.2",
                            "typescript":  "^5.9.2",
                            "vitest":  "^2.1.9"
                        },
    "eslintConfig":  {
                         "root":  true,
                         "env":  {
                                     "es2023":  true,
                                     "browser":  true,
                                     "node":  true
                                 },
                         "extends":  [
                                         "eslint:recommended"
                                     ],
                         "ignorePatterns":  [
                                                "dist/**",
                                                "node_modules/**"
                                            ],
                         "overrides":  [
                                           {
                                               "files":  [
                                                             "**/*.ts",
                                                             "**/*.tsx"
                                                         ],
                                               "parserOptions":  {
                                                                     "project":  false
                                                                 },
                                               "rules":  {

                                                         }
                                           }
                                       ]
                     },
    "prettier":  {
                     "printWidth":  100,
                     "singleQuote":  true,
                     "trailingComma":  "all",
                     "semi":  true
                 },
    "packageManager":  "npm@11.4.2"
}
